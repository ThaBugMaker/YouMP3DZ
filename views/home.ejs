<main>
  <!-- This is a container for the form and other elements on the page -->
  <div class="container center">
    <p style="text-align: center; margin: 1rem auto -1rem">
      <span id="remaining">50</span> downloads remaining within the next hour.
    </p>
    <form>
      <!-- This is the form where the user inputs the Youtube URL -->
      <label for="link">Enter Youtube URL:</label>

      <!-- This is a container for the input elements on the page -->
      <div class="inputsG">
        <!-- This is the input field where the user enters the Youtube URL -->
        <input type="url" name="url" id="yt-link" placeholder="https://youtu.be/WILNIXZr2oc" autocorrect="off" autocapitalize="off" spellcheck="false" autofocus="on" aria-autocomplete="none" required />
